<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_head_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/LLPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/img_avatar"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@android:color/white"/>

                <TextView
                    android:id="@+id/tv_nama_lengkap_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/LLPhoto">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:drawableTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_baseline_location_on_24"/>

            <TextView
                android:id="@+id/tv_alamat_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:drawableTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"/>

            <TextView
                android:id="@+id/tv_phone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:drawableTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_baseline_gender_24"/>

            <TextView
                android:id="@+id/tv_gender_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titik lokasi"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"
                android:drawableTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_baseline_location_searching_24"/>

            <TextView
                android:id="@+id/tv_titik_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- , -"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"/>




        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>